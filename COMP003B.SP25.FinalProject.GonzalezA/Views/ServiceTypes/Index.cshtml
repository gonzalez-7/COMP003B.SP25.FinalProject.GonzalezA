@model IEnumerable<COMP003B.SP25.FinalProject.GonzalezA.Models.ServiceType>

@{
    ViewData["Title"] = "Service Types";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Service Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            @await Html.PartialAsync("_ServiceCard", item)
            <div class="mt-2">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
